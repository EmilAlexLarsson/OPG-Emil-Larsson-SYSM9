<Window x:Class="CookMaster.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.View"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="400">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Label Content="Username"/>
            <TextBox Width="200" Text="{Binding Username,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Label Content="Password"/>
            <TextBox Width="200" Text="{Binding Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Label Content="Country"/>
            <ComboBox Width="200" ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"/>
        </StackPanel>
        <ComboBox ItemsSource="{Binding SecurityQuestion}" SelectedItem="{Binding SelectedQuestion, Mode=TwoWay}" Margin="5" HorizontalAlignment="Center" Width="200"/>
        <TextBox Text="{Binding QuestionAnswer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Center" Margin="5"/>

        <Button Content="Register" Margin="5" Command="{Binding CreateUserCommand}" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
