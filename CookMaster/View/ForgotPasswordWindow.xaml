<Window x:Class="CookMaster.View.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.View"
        mc:Ignorable="d"
        Title="ForgotPasswordWindow" Height="450" Width="350">
    <StackPanel>
        <Label Content="Reset Password" HorizontalAlignment="Center" FontStyle="Italic" FontSize="20"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Username" HorizontalAlignment="Center" Margin="5"/>
            <TextBox Width="200" Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="New password" HorizontalAlignment="Center" Margin="5"/>
            <TextBox Width="180" Text="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Confirm password" HorizontalAlignment="Center" Margin="5"/> 
            <TextBox Width="180" Text="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="{Binding Question}" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding QuestionAnswer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
        <Button Content="Reset Password" Command="{Binding ResetPasswordCommand}" HorizontalAlignment="Center" Margin="5"/>
    </StackPanel>
</Window>
